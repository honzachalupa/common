{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "target": "es2015",
        "module": "esnext",
        "lib": ["esnext", "dom"],
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "paths": {
            "@honzachalupa/ui": ["packages/ui/src/index.ts"],
            "@honzachalupa/utils": ["packages/utils/src/index.ts"]
        }
    },
    "exclude": ["node_modules"]
}
